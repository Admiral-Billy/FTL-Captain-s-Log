<Window x:Class="FTL_Captain_s_Log.MainWindow"
        xmlns:uc="clr-namespace:FTL_Captain_s_Log"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FTL_Captain_s_Log"
        mc:Ignorable="d"
        Title="FTL: Captain's Log" Height="720" Width="1280" Background="#1E1E1E">
    <Grid>
        <TextBlock Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Text="Welcome to your log, Captain! Start by opening the menu or searching for something!" VerticalAlignment="Center" FontSize="26"/>
        <uc:Menu x:Name="menu" Margin="0,0,0,0"/>
    </Grid>
</Window>
