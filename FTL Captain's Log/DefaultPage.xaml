             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FTL_Captain_s_Log"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid Background="#1E1E1E">
        <TextBlock Foreground="White" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Welcome to your log, Captain! Start by opening the menu or searching for something!" VerticalAlignment="Bottom" FontSize="26" Margin="0,0,0,75"/>
        <Image Height="458" HorizontalAlignment="Center" VerticalAlignment="Top" Width="458" Source="/Resources/log.png" Margin="0,10,0,0"/>
    </Grid>
</UserControl>
