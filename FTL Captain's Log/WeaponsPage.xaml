<UserControl x:Class="FTL_Captain_s_Log.WeaponsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FTL_Captain_s_Log"
             xmlns:input="clr-namespace:System.Windows.Controls;assembly=DotNetProjects.Input.Toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid Background="#1E1E1E">
        <TextBlock Name="WeaponStats" Foreground="White" HorizontalAlignment="Center" Margin="0,250,0,0" TextWrapping="Wrap" Text="Welcome to the Weapons Page. Select a weapon to see its stats!" VerticalAlignment="Top" FontSize="16"/>
        <ComboBox Name="WeaponBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="730" Margin="0,200,0,0" IsEditable="True" SelectionChanged="Weapon_Selected"/>
        <CheckBox Name="UseBlueprint" Content="Search by blueprint name" Foreground="White" HorizontalAlignment="Center" Margin="900,204,0,0" VerticalAlignment="Top" Checked="Use_Blueprint" Unchecked="Use_Name"/>
    </Grid>
</UserControl>
